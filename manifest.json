{
  "manifest_version": 3,
  "name": "Kindle Copy",
  "version": "1.0",
  "description": "Kindle Copy",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "desktopCapture",
    "scripting",
    "contextMenus",
    "clipboardWrite"
  ],
  "host_permissions": ["https://read.amazon.in/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Kindle Copy",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["tesseract/*"],
      "matches": ["https://read.amazon.in/*"],
      "use_dynamic_url": true
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "content_scripts": [
    {
      "js": ["tesseract/tesseract.min.js", "content.js"],
      "matches": ["https://read.amazon.in/*"]
    }
  ],
  "commands": {
    "perform-ocr": {
      "suggested_key": {
        "mac": "Command+K"
      },
      "description": "Kindle Copy"
    }
  }
}
